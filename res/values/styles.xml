<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
	
	<!-- Theme for light background -->
	
	<style name="Background_Narrow_Light">
        <item name="android:background">@drawable/frame_narrow_light</item>
    </style>
    
    <style name="Background_Wide_Light">
        <item name="android:background">@drawable/frame_wide_light</item>
    </style>
    
    <style name="PhoneNumber_Light">
    	<item name="android:textSize">28sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    
    <!-- Theme for dark background -->  
    
    <style name="Background_Narrow_Dark">
        <item name="android:background">@drawable/frame_narrow_dark</item>
    </style>
    
    <style name="Background_Wide_Dark">
        <item name="android:background">@drawable/frame_wide_dark</item>
    </style>
    
    <style name="PhoneNumber_Dark">
    	<item name="android:textSize">28sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
</resources>